<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_zona"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joel.proyecto_incidencias.GenerarIncidenciaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spiner_generar"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dialog"
            android:textAlignment="center"></Spinner>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mvp_mapita"
            android:layout_width="match_parent"
            android:layout_height="197dp" />

        <EditText
            android:id="@+id/txt_dadada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="zona" />

        <EditText
            android:id="@+id/txt_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Comentario" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <ImageButton
            android:id="@+id/btn_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/camera" />
    </LinearLayout>

</FrameLayout>
